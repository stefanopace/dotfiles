roll_dice () {
  dice=('⚀' '⚁' '⚂' '⚃' '⚄' '⚅')
  roll1=$(( $RANDOM % 6 ))
  roll2=$(( $RANDOM % 6 ))
  roll3=$(( $RANDOM % 6 ))
  sum=$(( $roll1 + $roll2 + $roll3 + 3 ))
  if [ $sum == 18 ]; then printf '\033[5m'; fi
  printf "${dice[$roll1]} ${dice[$roll2]} ${dice[$roll3]}"
  if [ $sum == 18 ]; then printf '\033[25m'; fi
}

