# vim syntax=sh
PS1='`
#PATHS[9]=^/
#ICONS[9]=\[\e[01m\]/\[\e[00m\]/
PATHS[8]=^/home/stefano
ICONS[8]=\[\e[01m\]~\[\e[00m\]
PATHS[7]=^/home/stefano/dotfiles
ICONS[7]=\[\e[01m\]•\[\e[00m\]
PATHS[6]=^/home/stefano/projects
ICONS[6]=\[\e[01m\]p\[\e[00m\]
PATHS[5]=^/home/stefano/projects/devbox
ICONS[5]=❐
PATHS[4]=^/home/stefano/projects/devbox/nap/htdocs/dev
ICONS[4]=ℬ
PATHS[3]=^/home/stefano/downloads
ICONS[3]=↓
PATHS[2]=^/home/stefano/Scrivania/work-in-progress
ICONS[2]=\[\e[01m\]w\[\e[00m\]
PATHS[1]=^/home/stefano/Scrivania/utilities/deploy
ICONS[1]=↑

pwd |
while read pwd; do
  for i in $(seq 1 ${#PATHS[@]}); do
    if [[ $pwd =~ ${PATHS[$i]} ]]; then
        echo $pwd | sed -E "s|${PATHS[$i]}|${ICONS[$i]}|";
        break 2;
    fi
  done;
  echo $pwd
done | sed -E "s#(^(/.)|/(.))[^/]*#\2\3#g" `\[\e[` [ $? == 0 ] && echo '32'\
                                                               || echo '31'`m\]`case $(whoami) in
                                                                                    "stefano") echo ">"  ;;
                                                                                       "root") echo "#>" ;;
                                                                                            *) echo "??" ;;
                                                                                esac `\[\e[00m\]'
