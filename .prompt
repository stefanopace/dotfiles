# vim syntax=sh
PS1='`
current_status=$?
bar_char="â€¾"
status_color=$([ ${current_status} == 0 ] && echo '\\[\\e[32m\\]' || echo '\\[\\e[31m\\]')
current_branch=$(git rev-parse --is-inside-work-tree &> /dev/null && git rev-parse --abbrev-ref HEAD | tr -d "\n")
rendered_branch=""
branch_space=0
case ${current_branch} in
    "master") rendered_branch="_//"; branch_space=3 ;;
          "") rendered_branch="" ;;
           *) rendered_branch="_// \[\e[33m\]${current_branch}\[\e[00m\]${status_color} //"; branch_space=$((${#current_branch} + 7)) ;;
esac
printf "${status_color}"
printf "${rendered_branch}"
bar_length=$(($(tput cols)-${branch_space}))
printf "%.s${bar_char}" $(seq 1 ${bar_length})
`\n\[\e[93m\]`test -n "$PROMPT_REMOVE_HOSTNAME" || ( cat /etc/hostname | tr -d "\n" && echo : )`\[\e[00m\]`
d | sed -E "s|([^/]+)|\[\e[94m\]\1\[\e[00m\]|g"
case $(whoami) in
    "stefano") echo ">"  ;;
       "root") echo "#>" ;;
            *) echo "??>";;
esac`'
