alias ls='ls --color=auto'
alias ll='ls -lahFtr'
alias la='ls -A'

alias cdow='cd ~/downloads; d'

alias each='xargs -L1 -I{}'
alias gatto='cat'
alias meno='less'
alias reloadbashrc='source ~/.bashrc'
alias jsoncat='python -m json.tool'
alias clip="tee /dev/tty | perl -pe 'chomp if eof' | xclip -sel clip"
alias open='xdg-open'
alias readxresources='xrdb -merge ~/.Xresources'
alias voc='cat /usr/share/dict/words | ff'

alias icat='kitty +kitten icat'
alias i3lock='i3lock -c 001015'

alias vimcheatsheet='surf https://vim.rtorr.com/lang/it'

d () {
    echo -e "\033[1m\033[34m`pwd | sed "s|/home/stefano|~|"`\033[00m"
}

ff () {
	local tmp
	tmp=$(fzf $@) && echo "$tmp"
}

rlol () {
	local dice=('⚀ ' '⚁ ' '⚂ ' '⚃ ' '⚄ ' '⚅ ')
	local launches=${1:-1}
	local sum=0
	for roll in $(seq 1 $launches); do
		local result=$(( $RANDOM % 6 ))
		sum=$(( $sum + $result + 1 ))
		echo -n "${dice[$result]}"
	done
	echo
	`exit $(( $launches * 6 - $sum ))`
}

cdf() {
  local dir
  dir=$(find / -type d 2> /dev/null | fzf +m) &&
  cd "$dir"
  d
}
