# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        separator = ""
        colors = true
        interval = 5
        color_good = "#ffffff"
        color_degraded = "#ffff88"
        color_bad = "#ff0000"
}

order += "battery all"
order += "volume master"
order += "wireless _first_"
order += "ethernet _first_"
order += "disk /"
order += "memory"
order += "cpu_usage"
order += "tztime local"


volume master {
        format = "  %volume "
        format_muted = "  "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

wireless _first_ {
        format_up = " %quality %essid "
        format_down = ""
}

ethernet _first_ {
        format_up = " %speed "
        format_down = ""
}

battery all {
        format = " %status %percentage %remaining "
        format_down = ""
        status_full = ''
        status_bat = ''
        status_chr = ''
        status_unk = '?'
        low_threshold = 15
        threshold_type = time
}

disk "/" {
        format = "  %avail "
        low_threshold = 15
	threshold_type = gbytes_avail
        prefix_type = binary
}

cpu_usage {
        format = "  %usage "
        max_threshold = 75
	degraded_threshold = 25
}

memory {
        format = "  %percentage_used "
        threshold_degraded = "20%"
        threshold_critical = "10%"
}

tztime local {
        format = "  %Y-%m-%d %H:%M:%S "
}
